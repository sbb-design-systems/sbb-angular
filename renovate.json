{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:base"],
  "enabledManagers": ["npm", "github-actions"],
  "includePaths": ["package.json"],
  "lockFileMaintenance": {
    "schedule": ["every weekend"],
    "enabled": true
  },
  "username": "sbb-angular-renovate[bot]",
  "gitAuthor": "sbb-angular-renovate<52953647+sbb-angular-renovate[bot]@users.noreply.github.com>",
  "repositories": ["sbb-design-systems/sbb-angular"],
  "allowPostUpgradeCommandTemplating": true,
  "allowedPostUpgradeCommands": ["^yarn"],
  "ignoreDeps": [
    "@angular/dev-infra-private",
    "@arcgis/core",
    "@bazel/buildifier",
    "@bazel/buildozer",
    "@bazel/concatjs",
    "@bazel/esbuild",
    "@bazel/jasmine",
    "@bazel/protractor",
    "@bazel/rollup",
    "@bazel/runfiles",
    "@bazel/typescript",
    "@types/marked",
    "browser-sync",
    "browser-sync-client",
    "dgeni",
    "dgeni-packages",
    "highlight.js",
    "marked",
    "typescript",
    "yarn"
  ],
  "packageRules": [
    {
      "matchPackageNames": ["@types/grecaptcha", "@types/node", "jasmine", "jasmine-core"],
      "matchUpdateTypes": ["major"],
      "enabled": false
    },
    {
      "groupName": "angular",
      "matchPackagePrefixes": ["@angular/", "@angular-devkit/", "@schematics/angular", "typescript"]
    },
    {
      "groupName": "bazel",
      "matchPackagePrefixes": ["@bazel/"]
    },
    {
      "groupName": "commitlint",
      "matchPackagePrefixes": ["@commitlint/", "standard-version"]
    },
    {
      "groupName": "rollup",
      "matchPackagePrefixes": ["@rollup/", "rollup"]
    },
    {
      "groupName": "karma",
      "matchPackagePrefixes": ["karma"]
    },
    {
      "groupName": "jasmine",
      "matchPackagePrefixes": ["jasmine", "@types/jasmine"]
    },
    {
      "matchPackageNames": ["@angular/core", "@angular/cli", "@angular/cdk", "angular-t9n"],
      "postUpgradeTasks": {
        "commands": [
          "yarn install --frozen-lockfile --non-interactive --ignore-scripts",
          "npx ng update {{{depName}}} --from={{{currentVersion}}} --to={{{newVersion}}} --migrate-only --allow-dirty --force"
        ],
        "fileFilters": ["**/**"]
      }
    }
  ]
}
