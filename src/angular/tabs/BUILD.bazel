load(
    "//tools:defaults.bzl",
    "markdown_to_html",
    "ng_project",
    "ng_web_test_suite",
    "sass_binary",
    "sass_library",
)

package(default_visibility = ["//visibility:public"])

ng_project(
    name = "tabs",
    srcs = glob(
        ["**/*.ts"],
        exclude = ["**/*.spec.ts"],
    ),
    assets = [
        ":tab-body.css",
        ":tab-group.css",
        ":tab-header.css",
        ":tab-nav-bar.css",
    ] + glob(["**/*.html"]),
    deps = [
        "//:node_modules/@angular/animations",
        "//:node_modules/@angular/cdk",
        "//:node_modules/@angular/core",
        "//:node_modules/rxjs",
        "//src/angular/core",
        "//src/angular/icon",
    ],
)

sass_library(
    name = "tabs_scss_lib",
    srcs = glob(["**/_*.scss"]),
    deps = ["//src/angular:scss_lib"],
)

sass_binary(
    name = "tab_body_scss",
    src = "tab-body.scss",
)

sass_binary(
    name = "tab_group_scss",
    src = "tab-group.scss",
    deps = [
        ":tabs_scss_lib",
        "//src/angular:scss_lib",
    ],
)

sass_binary(
    name = "tab_header_scss",
    src = "tab-header.scss",
    deps = [
        ":tabs_scss_lib",
    ],
)

sass_binary(
    name = "tab_nav_bar_scss",
    src = "tab-nav-bar.scss",
    deps = [
        ":tabs_scss_lib",
        "//src/angular:scss_lib",
    ],
)

ng_project(
    name = "unit_test_sources",
    testonly = True,
    srcs = glob(
        ["**/*.spec.ts"],
        exclude = ["**/*.e2e.spec.ts"],
    ),
    deps = [
        ":tabs",
        "//:node_modules/@angular/cdk",
        "//:node_modules/@angular/common",
        "//:node_modules/@angular/core",
        "//:node_modules/@angular/platform-browser",
        "//:node_modules/rxjs",
        "//src/angular/core/testing",
        "//src/angular/icon/testing",
    ],
)

ng_web_test_suite(
    name = "unit_tests",
    deps = [":unit_test_sources"],
)

markdown_to_html(
    name = "overview",
    srcs = [":tabs.md"],
)

filegroup(
    name = "source-files",
    srcs = glob(["**/*.ts"]),
)
