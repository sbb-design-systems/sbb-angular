load(
    "//tools:defaults.bzl",
    "markdown_to_html",
    "ng_module",
)

package(default_visibility = ["//visibility:public"])

ng_module(
    name = "loading",
    srcs = glob(
        ["**/*.ts"],
        exclude = ["**/*.spec.ts"],
    ),
    deps = [
        "//src/angular/loading-indicator",
    ],
)

markdown_to_html(
    name = "overview",
    srcs = [":loading.md"],
)

filegroup(
    name = "source-files",
    srcs = glob(["**/*.ts"]),
)
