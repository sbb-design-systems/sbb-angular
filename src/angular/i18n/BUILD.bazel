load(
    "//tools:defaults.bzl",
    "ng_project",
    "ng_web_test_suite",
    "ts_project",
)

package(default_visibility = ["//visibility:public"])

ng_project(
    name = "i18n",
    srcs = glob(
        ["**/*.ts"],
        exclude = ["**/*.spec.ts"],
    ),
    deps = [
        "//:node_modules/@types/node",
    ],
)

ts_project(
    name = "unit_test_sources",
    testonly = True,
    srcs = glob(
        ["**/*.spec.ts"],
        exclude = ["**/*.e2e.spec.ts"],
    ),
    deps = [
        ":i18n",
        "//:node_modules/@angular/common",
        "//:node_modules/@angular/platform-browser",
    ],
)

ng_web_test_suite(
    name = "unit_tests",
    deps = [":unit_test_sources"],
)

filegroup(
    name = "source-files",
    srcs = glob(["**/*.ts"]),
)

filegroup(
    name = "xlf",
    srcs = glob(["**/*.xlf"]),
)
