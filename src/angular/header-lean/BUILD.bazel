load(
    "//tools:defaults.bzl",
    "markdown_to_html",
    "ng_project",
    "ng_web_test_suite",
    "sass_binary",
    "ts_project",
)

package(default_visibility = ["//visibility:public"])

ng_project(
    name = "header-lean",
    srcs = glob(
        ["**/*.ts"],
        exclude = ["**/*.spec.ts"],
    ),
    assets = [
        ":app-chooser-section.css",
        ":header-menu-trigger.css",
        ":header-menu.css",
        ":header.css",
    ] + glob(["**/*.html"]),
    deps = [
        "//:node_modules/@angular/animations",
        "//:node_modules/@angular/cdk",
        "//:node_modules/@angular/common",
        "//:node_modules/@angular/core",
        "//:node_modules/@angular/localize",
        "//:node_modules/@angular/router",
        "//:node_modules/rxjs",
        "//src/angular/core",
        "//src/angular/icon",
    ],
)

sass_binary(
    name = "app_chooser_section_scss",
    src = "app-chooser-section.scss",
    deps = [
        "//src/angular:scss_lib",
    ],
)

sass_binary(
    name = "header_menu_trigger_scss",
    src = "header-menu-trigger.scss",
    deps = [
        "//src/angular:scss_lib",
    ],
)

sass_binary(
    name = "header_menu_scss",
    src = "header-menu.scss",
    deps = [
        "//src/angular:scss_lib",
    ],
)

sass_binary(
    name = "header_scss",
    src = "header.scss",
    deps = [
        "//src/angular:scss_lib",
    ],
)

ts_project(
    name = "unit_test_sources",
    testonly = True,
    srcs = glob(
        ["**/*.spec.ts"],
        exclude = ["**/*.e2e.spec.ts"],
    ),
    deps = [
        ":header-lean",
        "//:node_modules/@angular/cdk",
        "//:node_modules/@angular/platform-browser",
        "//src/angular/core",
        "//src/angular/core/testing",
        "//src/angular/icon",
        "//src/angular/icon/testing",
    ],
)

ng_web_test_suite(
    name = "unit_tests",
    deps = [":unit_test_sources"],
)

markdown_to_html(
    name = "overview",
    srcs = [":header-lean.md"],
)

filegroup(
    name = "source-files",
    srcs = glob(["**/*.ts"]),
)
