{
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "../dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "module": "esnext",
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es2015",
    "lib": ["es2018", "dom"],
    "types": ["grecaptcha"],
    "paths": {
      "@sbb-esta/angular": ["../angular"],
      "@sbb-esta/angular/*": ["../angular/*"],
      "@sbb-esta/components-examples": ["../components-examples"],
      "@sbb-esta/components-examples/*": ["../components-examples/*"],
      "@sbb-esta/journey-maps": ["../journey-maps"],
      "@sbb-esta/journey-maps/*": ["../journey-maps/*"],
    },
  },
  "bazelOptions": {
    // See https://github.com/angular/angular/issues/29107
    "devmodeTargetOverride": "es5",
  },
}
