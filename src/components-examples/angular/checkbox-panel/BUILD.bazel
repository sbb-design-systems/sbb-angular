load(
    "//tools:defaults.bzl",
    "ng_project",
)

package(default_visibility = ["//visibility:public"])

ng_project(
    name = "checkbox-panel",
    srcs = glob(
        ["**/*.ts"],
        exclude = ["**/*.spec.ts"],
    ),
    assets = glob([
        "**/*.html",
        "**/*.css",
    ]),
    deps = [
        "//:node_modules/@angular/common",
        "//:node_modules/@angular/core",
        "//:node_modules/@angular/forms",
        "//:node_modules/rxjs",
        "//src/angular/checkbox",
        "//src/angular/checkbox-panel",
        "//src/angular/core",
        "//src/angular/form-field",
        "//src/angular/icon",
        "//src/angular/input",
        "//src/angular/select",
    ],
)

filegroup(
    name = "source-files",
    srcs = glob([
        "**/*.html",
        "**/*.css",
        "**/*.ts",
    ]),
)
