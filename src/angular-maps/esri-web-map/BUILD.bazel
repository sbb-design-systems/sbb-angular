load(
    "//tools:defaults.bzl",
    "markdown_to_html",
    "ng_module",
    "ng_test_library",
    "ng_web_test_suite",
    "sass_binary",
)

package(default_visibility = ["//visibility:public"])

ng_module(
    name = "esri-web-map",
    srcs = glob(
        ["**/*.ts"],
        exclude = ["**/*.spec.ts"],
    ),
    assets = [":esri-web-map/esri-web-map.component.css"] + glob(["**/*.html"]),
    module_name = "@sbb-esta/angular-maps/esri-web-map",
    deps = [
        "//src/angular-maps/core",
        "@npm//@angular/common",
        "@npm//@angular/core",
        "@npm//@arcgis/core",
        "@npm//rxjs",
    ],
)

sass_binary(
    name = "esri_web_map_esri_web_map_component_scss",
    src = "esri-web-map/esri-web-map.component.scss",
)

ng_test_library(
    name = "unit_test_sources",
    srcs = glob(
        ["**/*.spec.ts"],
        exclude = ["**/*.e2e.spec.ts"],
    ),
    deps = [
        ":esri-web-map",
    ],
)

ng_web_test_suite(
    name = "unit_tests",
    deps = [
        # do not sort
        ":unit_test_sources",
    ],
)

markdown_to_html(
    name = "overview",
    srcs = [":esri-web-map.md"],
)

filegroup(
    name = "source-files",
    srcs = glob(["**/*.ts"]),
)

filegroup(
    name = "html-source-files",
    srcs = glob(["**/*.html"]),
)
